<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:background="@color/delta_quint_gold">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="center"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/delta_quint_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/vote_thanks"
            android:id="@+id/thanksMessage"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/vote_recorded"
            android:id="@+id/voteRecorded"
            android:textSize="64dp"
            android:layout_gravity="center_horizontal"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:columnCount="3"
        android:rowCount="1"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x1.25_normal_button_dimens"
            android:text="@string/quit_session"
            android:id="@+id/quitSessionButton"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal|center_horizontal|bottom"
            android:layout_columnWeight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x1.25_normal_button_dimens"
            android:text="@string/join_session_again"
            android:id="@+id/joinAnotherSessionButton"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal|center_horizontal|bottom"
            android:layout_columnWeight="1" />
    </GridLayout>

</GridLayout>
