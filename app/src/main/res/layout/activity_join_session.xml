<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JoinSessionActivity"
    android:columnCount="1"
    android:rowCount="3"
    android:background="#fdd835">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@android:color/holo_blue_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/join_header"
            android:id="@+id/joinHeaderTextView"
            android:gravity="center" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:columnCount="1"
        android:rowCount="4"
        android:layout_gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/session_name_join"
            android:id="@+id/sessionNameTextView"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/session_password_join"
            android:id="@+id/sessionPasswordTextView"
            android:layout_column="0"
            android:layout_row="2"
            android:phoneNumber="true"
            android:textColor="@android:color/black" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sessionNameEditText"
            android:layout_column="0"
            android:layout_row="1"
            android:inputType="text"
            android:ems="15"
            android:editable="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="15"
            android:id="@+id/sessionPasswordEditText"
            android:layout_column="0"
            android:layout_row="3" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="@dimen/x1.25_normal_button_dimens"
            android:text="@string/join_session_button_join"
            android:id="@+id/joinSessionButton" />
    </LinearLayout>

</GridLayout>
