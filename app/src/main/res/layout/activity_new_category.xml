<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/GridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="4">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/category_name_new"
            android:id="@+id/categoryNameTextView"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/categoryNameEditText"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal" />
    </GridLayout>

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="fill_horizontal">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/candidateEditText"
            android:hint="@string/candidate_name_prompt_new"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_candidate_new"
            android:id="@+id/addCandidateButton"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal" />
    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_gravity="fill_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/candidate_list_new"
            android:id="@+id/candidateListTextView"

            android:layout_gravity="center_horizontal" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:id="@+id/listView"

            android:layout_gravity="fill_horizontal" />
    </LinearLayout>

    <GridLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:columnCount="2"
        android:rowCount="1"
        android:layout_gravity="fill_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_voting_session_button_new"
            android:id="@+id/endVotingSessionButton"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_results_button_new"
            android:id="@+id/viewResultsButton"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="fill_horizontal" />
    </GridLayout>
</GridLayout>
