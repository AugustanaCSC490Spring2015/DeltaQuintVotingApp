<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:columnCount="1"
    android:rowCount="3"
    android:background="@color/delta_quint_gold">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:background="@color/delta_quint_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/voting_user_title"
            android:id="@+id/votingScreenTitle" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/sessionName"
            android:layout_gravity="center_horizontal"
            android:textSize="64dp"
            android:layout_column="0"
            android:layout_row="0" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/categoryName"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:textSize="32dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/list_view_long_height"
            android:id="@+id/listView"
            android:background="@color/delta_quint_gray" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1.25_normal_button_dimens"
            android:text="@string/submit_button"
            android:id="@+id/submitButton"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_column="0"
            android:layout_row="2" />
    </LinearLayout>
</GridLayout>
